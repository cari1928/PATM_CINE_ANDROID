<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imvAsiento"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/txtFila"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/imvAsiento"
            android:hint="Título"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtColumna"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFila"
            android:layout_toRightOf="@+id/imvAsiento"
            android:hint="Lenguaje"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtDuracion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtColumna"
            android:layout_toRightOf="@+id/imvAsiento"
            android:hint="Duración"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtSala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtDuracion"
            android:layout_toRightOf="@+id/imvAsiento"
            android:hint="Sala"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtFecha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtSala"
            android:layout_toRightOf="@+id/imvAsiento"
            android:hint="Fecha"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtHora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtFecha"
            android:layout_toRightOf="@+id/imvAsiento"
            android:hint="Hora"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>